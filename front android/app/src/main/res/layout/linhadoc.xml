<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="right"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-2dp">

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="97dp"

            android:layout_gravity="right"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp">

            <LinearLayout
                android:layout_width="239dp"
                android:layout_height="96dp"

                android:layout_gravity="right"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-2dp">

                <TextView
                    android:id="@+id/nomeRe"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Nome do relatório"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.785" />

                <TextView
                    android:id="@+id/nomeEnt"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:text="Nome da entidade"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.785" />

                <TextView
                    android:id="@+id/data"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:text="Data"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.785" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="match_parent"

            android:layout_gravity="right"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Ler"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/maisacoes"
                android:layout_width="66dp"
                android:layout_height="62dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Mais ações"
                android:textColor="#FFFFFF"
                android:onClick="ShowPopup3"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>