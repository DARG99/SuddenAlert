        android:layout_marginStart="212dp"
        android:layout_marginTop="68dp"
        android:onClick="alteraDados_rec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ala2"
        app:srcCompat="@drawable/ic_alterar_foreground" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="4dp"
        android:onClick="eliminarRecluso"
        app:layout_constraintEnd_toStartOf="@+id/alterarRec2"
        app:layout_constraintTop_toBottomOf="@+id/nascimento1"
