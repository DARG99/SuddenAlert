<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="56dp"
        android:layout_gravity="right"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-2dp">


        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do relatÃ³rio"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.785" />

            <TextView
                android:id="@+id/dataRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:text="Data"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.785" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="53dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:onClick="mostrarRelatorio"
            app:srcCompat="@mipmap/ic_ver_foreground" />

        <ImageView
            android:id="@+id/eliminarRelatorio"
            android:layout_width="52dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:onClick="eliminarRelatorio"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_delete_foreground" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>